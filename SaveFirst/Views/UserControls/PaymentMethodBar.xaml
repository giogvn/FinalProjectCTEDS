<UserControl x:Class="SaveFirst.Views.UserControls.PaymentMethodBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveFirst.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="280">
    <Grid>
        <TextBox     Width="195" Height="25" Margin="20,10,60,45"
                     FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                     IsReadOnly="True" Name="NameBox" 
                     />
        
        
        <Grid Width="195" Height="25" Margin="20,45,60,10">
            <Rectangle Fill="LightSeaGreen" Stroke="Black"
                       />
            <Rectangle HorizontalAlignment="Left" Name ="Spent" Fill="Red" Stroke="Black"
                       />
        </Grid>

        
    </Grid>
</UserControl>
